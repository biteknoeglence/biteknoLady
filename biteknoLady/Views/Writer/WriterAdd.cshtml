@model biteknoLady.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterAdd", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgilerimi Düzenle</h4>
                <div class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x => x.WriterID)
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                        @*<input type="text" class="form-control" id="exampleInputName1" placeholder="Name">*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email adres</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                        @*<input type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                        @*                    <input type="password" class="form-control" id="exampleInputPassword4" placeholder="Password">*@
                    </div>
                    <div class="form-group">
                        <label>Fotoğraf</label>
                        <input type="file" name="WriterImage">
                        
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkımda</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 3, new { @class = "form-control" })
                        @*<textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
}

