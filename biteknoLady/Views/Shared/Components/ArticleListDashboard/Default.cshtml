@using EntityLayer.Concrete
@model List<Article>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son 10 Post</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Başlık </th>
                                <th> Durum </th>
                                <th> Tarih </th>
                                <th> Kategori </th>
                                <th> Blog ID </th>
                                <th>Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    <img src="@item.ArticleImage" class="mr-2" alt="image"> @item.ArticleTitle
                                </td>
                                <td>
                                    <label class="badge badge-gradient-success">@item.ArticleStatus</label>
                                </td>
                                <td>  @(((DateTime)item.ArticleDate).ToString("dd-MMM-yyyy")) </td>
                                <td> 
                                    <label class="badge badge-gradient-primary">@item.Category.CategoryName</label></td>
                                <td> @item.ArticleID </td>
                                <td>
                                    <a href="/Article/ArticleReadAll/@item.ArticleID" class="badge badge-gradient-danger">Detaylar</a>
</td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
